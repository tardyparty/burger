<div class="container center">
<h1 class="text-center">Burger!</h1>
    <div class="card col-md-6">
        <div class="card-title">
            <h2>Burgers:</h2>
        </div>
        <div class="card-body text-center">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        <li> 
                            {{burger_name}} 
                            <button class="devour btn btn-primary btn-sm" 
                            data-id="{{id}}" 
                            data-isDevoured="{{devoured}}">
                                Devour!
                            </button>
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="card col-md-6">
        <div class="card-title">
            <h2>Devoured: </h2>
        </div>
        <div class="card-body">
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        <li>{{burger_name}}</li>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="card col-md-8">
        <div class="card-title">
            <h2>Add a Burger</h2>
        </div>
        <div class="card-body">
            <form class="create-form">
                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="newBurger" name="name">
                </div>
                <button class="btn btn-primary btn-lg" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>
